<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Regista</th>
      <th>Attori</th>
      <th>Genere</th>
      <th>Trama</th>
      <th>Durata</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.titolo %></td>
        <td><%= movie.regista %></td>
        <td><%= movie.attori %></td>
        <td><%= movie.genere %></td>
        <td><%= movie.trama %></td>
        <td><%= movie.durata %></td>
        <td><%= link_to 'Mostra', movie %></td>
        <td><%= link_to 'Modifica', edit_movie_path(movie) %></td>
        <td><%= link_to 'Disruggi', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

